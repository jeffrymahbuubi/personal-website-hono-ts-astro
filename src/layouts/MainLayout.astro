---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Personal Portofolio of Aunuun Jeffry Mahbuubi',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta name="description" content={description} />
    <meta name="author" content="Aunuun Jeffry Mahbuubi" />
    <title>{title}</title>

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Styles -->
    <link rel="stylesheet" href="/src/main.css" />
  </head>
  <body>
    <slot />

    <!-- Scripts -->
    <script src="/src/scripts/portofolio.ts"></script>
  </body>
</html>
